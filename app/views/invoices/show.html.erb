<div class="container mt-5">
  <div class="d-flex justify-content-center row">
    <div class="col-md-8">
      <div class="p-3 bg-white rounded">
        <div class="row">
          <h2 class="text-uppercase text-dark fw-bold">Faktúra</h2>
          <div class="col-md-6 text-dark text-start p-3">
            <h5 class="text-uppercase">Odosielateľ</h5>
            <div class="billed"><span class="ml-1"><%= @invoice.full_name %></span></div>
            <div class="billed"><span class="ml-1"><%= @invoice.created_at %></span></div>
          </div>
          <div class="col-md-6 text-dark text-start p-3">
            <h5 class="text-uppercase">Prijímateľ</h5>
            <div class="billed"><span class="ml-1"><%= @invoice.full_name %></span></div>
            <div class="billed"><span class="ml-1"><%= @invoice.created_at %></span></div>
        </div>
        <div class="mt-3">
          <div class="table-responsive">
            <table class="table">
              <thead>
              <tr>
                <th>Product</th>
                <th>Unit</th>
                <th>Price</th>
                <th>Total</th>
              </tr>
              </thead>
              <tbody>
              <tr>
                <td>Custom oil painting (24 X 36 in.)</td>
                <td>10</td>
                <td>34</td>
                <td>340</td>
              </tr>
              <tr>
                <td>Digital illustraion paint(8.5 X 11 in.)</td>
                <td>12</td>
                <td>50</td>
                <td>600</td>
              </tr>
              <tr>
                <td></td>
                <td></td>
                <td>Total</td>
                <td>940</td>
              </tr>
              </tbody>
            </table>
          </div>
        </div>
        <div class="text-right mb-3 d-flex justify-content-center">
          <%= link_to "Upraviť", edit_invoice_path(@invoice), class:"btn btn-light btn-sm mr-5" %>
          <%= button_to "Vymazať", @invoice, method: :delete, form: { data: { turbo_confirm: "Si si istý?" } }, class:"btn btn-danger btn-sm mr-5" %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>